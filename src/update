#!/usr/bin/env bash
# Module Update
updategithub(){
        echo -e "";
        print_status "Update/sync with Private-Locker's GitHub?";
        echo -e "";
        print_error "THIS WILL REMOVE YOUR ENTIRE NET-UP DIRECTORY!";
        echo -e "";
        read -p " Are you sure? [Y/n]" -n 1 -r
        echo -e "";
        if [[ $REPLY =~ ^[Yy]$ ]]; then
                print_status "Removing Old NET-UP Directory..";
				cd;
                rm -rf netup;
                echo -e "";
                git clone $GITHUBREPO netup
                echo -e "";
                print_status "Entire NET-UP was synced to Private-Locker's Modules Repo.";
				echo -e "";
				print_error "Attempting to re-run install script.";
				sudo /bin/bash netup/install.sh
        else
                print_status "Not Updating NET-UP.";
        fi
}